	<statements>
		<!--SELECT BOM_NETWORK_INFO-->
		<select id="BomMap.SelectBomNetworkInfos" parameterClass="AorBomMapParam" resultMap="rtnAorBomMap">
      SELECT
      A.ITEM_LEVEL
      , A.PLAN_VERSION
      , A.SO_ITEM_ID
      , A.SO_SITE_ID
      , A.SO_BUFFER_ID
      , A.BOM_ID
      , A.ROUTING_ID
      , A.BOM_TYPE
      , B.ITEM_TYPE
      , A.BOM_PRIORITY
      , A.FROM_ITEM_ID
      , A.FROM_SITE_ID
      , A.FROM_BUFFER_ID
      , A.FROM_BUFFER_SEQ
      , A.FROM_QTY
      , A.FROM_WIP_QTY
      , A.FROM_SUM_WIP_QTY
      , A.TO_ITEM_ID
      , A.TO_SITE_ID
      , A.TO_BUFFER_ID
      , A.TO_BUFFER_SEQ
      , A.TO_QTY
      , A.TO_WIP_QTY
      , A.TO_SUM_WIP_QTY
      , A.IS_USABLEDETAIL
      , A.IS_USABLEBOM
      , A.RESOURCE_IDS
      , A.ALL_RESOURCE_IDS
      , A.ROUTING_TAT
      , A.MIN_CUM_TAT
      , A.MAX_CUM_TAT
      , A.LATE_CUM_TAT
      , A.MAX_CUM_YIELD
      , A.PREV_ITEM_SITE_BUFFERS
      , A.NEXT_ITEM_SITE_BUFFERS
      FROM
      uFnGetBomTreeFromSO(#PlanVersion#, #SoID#) as A
      LEFT JOIN
      ODV_ITEM_MASTER as B
      ON
      A.PLAN_VERSION = B.PLAN_VERSION
      AND A.FROM_ITEM_ID = B.ITEM_ID
    </select>
    
    <!--SELECT BOM_PATH_SEARCH_LOG-->
    <select id="BomMap.SelectBomPathLog" parameterClass="AorBomMapParam" resultMap="rtnAorBomMapSub1">
      SELECT PLAN_VERSION, SO_ID, PATH
      FROM OUT_BOM_PATH_SEARCH_LOG
      WHERE PLAN_VERSION = #PlanVersion#
      AND SO_ID = #SoID#
    </select>
	</statements>
</sqlMap>