<?xml version="1.0" encoding="utf-8" ?>

<sqlMap namespace="AleatorikUI.Services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://ibatis.apache.org/mapping">

	<resultMaps>
		<resultMap id="rtnMdmCodeGroup"  class="MdmCodeGroup" >
			<result property="categoryID"   column="CATEGORY_ID"/>
			<result property="description"  column="DESCRIPTION"/>
		</resultMap>
	</resultMaps>

	<statements>
		<!--SELECT All-->
		<select id="MdmCodeGroup.Select" resultMap="rtnMdmCodeGroup">
			SELECT CATEGORY_ID
				 , DESCRIPTION
			  FROM CFG_CODE_CATEGORY
		</select>

		<!--INSERT-->
		<insert id="MdmCodeGroup.Insert" parameterClass="MdmCodeGroup">
			INSERT INTO CFG_CODE_CATEGORY
				( CATEGORY_ID
				, DESCRIPTION
				) VALUES
				( #categoryID#
				, #description#
				)
		</insert>

		<!--UPDATE-->
		<update id="MdmCodeGroup.Update" parameterClass="MdmCodeGroup">
			UPDATE CFG_CODE_CATEGORY
			   SET DESCRIPTION         = #description#
			 WHERE CATEGORY_ID = #categoryID#
		</update>

		<!--DELETE-->
		<delete id="MdmCodeGroup.Delete" parameterClass="string">
			DELETE
			  FROM CFG_CODE_CATEGORY
			 WHERE CATEGORY_ID = #categoryID#
		</delete>

	</statements>
</sqlMap>