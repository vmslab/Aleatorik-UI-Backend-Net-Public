<?xml version="1.0" encoding="utf-8" ?>

<sqlMap namespace="AleatorikUI.Services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://ibatis.apache.org/mapping">

	<resultMaps>
		<resultMap id="rtnMdmCustInfo"  class="MdmCustInfo" >
			<result property="customerID"   column="CUSTOMER_ID"/>
			<result property="customerName" column="CUSTOMER_NAME"/>
			<result property="priority"     column="PRIORITY"/>
			<result property="createTime"   column="CREATE_TIME"/>
			<result property="createUser"   column="CREATE_USER"/>
			<result property="updateTime"   column="UPDATE_TIME"/>
			<result property="updateUser"   column="UPDATE_USER"/>
		</resultMap>
	</resultMaps>

	<statements>
		<!--SELECT All-->
		<select id="MdmCustInfo.Select" resultMap="rtnMdmCustInfo">
			SELECT [CUSTOMER_ID]
				 , [CUSTOMER_NAME]
				 , [PRIORITY]
				 , [CREATE_TIME]
				 , [CREATE_USER]
				 , [UPDATE_TIME]
				 , [UPDATE_USER]
			  FROM [CFG_CUSTOMER]
		</select>

		<!--INSERT-->
		<insert id="MdmCustInfo.Insert" parameterClass="MdmCustInfo">
			INSERT INTO [CFG_CUSTOMER]
				 ( [CUSTOMER_ID]
				 , [CUSTOMER_NAME]
				 , [PRIORITY]
				 , [CREATE_TIME]
				 , [CREATE_USER]
				 , [UPDATE_TIME]
				 , [UPDATE_USER]
				 ) VALUES
				 ( #customerID#
				 , #customerName#
				 , #priority#
				 , getdate()
				 , #createUser#
				 , getdate()
				 , #updateUser#
				 )
		</insert>

		<!--UPDATE-->
		<update id="MdmCustInfo.Update" parameterClass="MdmCustInfo">
			UPDATE [CFG_CUSTOMER]
			   SET [CUSTOMER_ID]   = #customerID#
				 , [CUSTOMER_NAME] = #customerName#
				 , [PRIORITY]      = #priority#
				 , [UPDATE_TIME]   = getdate()
				 , [UPDATE_USER]   = #updateUser#
			 WHERE [CUSTOMER_ID]   = #customerID#
		</update>

		<!--DELETE-->
		<delete id="MdmCustInfo.Delete" parameterClass="string">
			DELETE
			  FROM [CFG_CUSTOMER]
			 WHERE [CUSTOMER_ID]   = #customerID#
		</delete>

	</statements>
</sqlMap>