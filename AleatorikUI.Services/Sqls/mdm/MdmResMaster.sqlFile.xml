<?xml version="1.0" encoding="utf-8" ?>

<sqlMap namespace="AleatorikUI.Services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://ibatis.apache.org/mapping">

	<resultMaps>
		<resultMap id="rtnMdmResMaster"  class="MdmResMaster" >
			<result property="resourceID"       column="RESOURCE_ID"/>
			<result property="siteID"           column="SITE_ID"/>
			<result property="location"         column="LOCATION"/>
			<result property="category"         column="CATEGORY"/>
			<result property="resourceType"     column="RESOURCE_TYPE"/>
			<result property="resourceGroupID"  column="RESOURCE_GROUP_ID"/>
			<result property="stageID"          column="STAGE_ID"/>
			<result property="capacityType"     column="CAPACITY_TYPE"/>
			<result property="capacityMode"     column="CAPACITY_MODE"/>
			<result property="isActive"         column="IS_ACTIVE"/>
			<result property="createTime"       column="CREATE_TIME"/>
			<result property="createUser"       column="CREATE_USER"/>
			<result property="updateTime"       column="UPDATE_TIME"/>
			<result property="updateUser"       column="UPDATE_USER"/>
		</resultMap>
	</resultMaps>

	<statements>
		<!--SELECT-->
		<select id="MdmResMaster.Select" resultMap="rtnMdmResMaster">
			SELECT [RESOURCE_ID]
				 , [SITE_ID]
				 , [LOCATION]
				 , [CATEGORY]
				 , [RESOURCE_TYPE]
				 , [RESOURCE_GROUP_ID]
				 , [STAGE_ID]
				 , [CAPACITY_TYPE]
				 , [CAPACITY_MODE]
				 , [IS_ACTIVE]
				 , [CREATE_TIME]
				 , [CREATE_USER]
				 , [UPDATE_TIME]
				 , [UPDATE_USER]
			  FROM [CFG_RESOURCE_MASTER]
		</select>

		<!--INSERT-->
		<insert id="MdmResMaster.Insert" parameterClass="MdmResMaster">
			INSERT INTO [CFG_RESOURCE_MASTER]
				 ( [RESOURCE_ID]
				 , [SITE_ID]
				 , [LOCATION]
				 , [CATEGORY]
				 , [RESOURCE_TYPE]
				 , [RESOURCE_GROUP_ID]
				 , [STAGE_ID]
				 , [CAPACITY_TYPE]
				 , [CAPACITY_MODE]
				 , [IS_ACTIVE]
				 , [CREATE_TIME]
				 , [CREATE_USER]
				 , [UPDATE_TIME]
				 , [UPDATE_USER]
				 ) VALUES
				 ( #resourceID#
				 , #siteID#
				 , #location#
				 , #category#
				 , #resourceType#
				 , #resourceGroupID#
				 , #stageID#
				 , #capacityType#
				 , #capacityMode#
				 , #isActive#
				 , getdate()
				 , #createUser#
				 , getdate()
				 , #updateUser#
				 )
		</insert>

		<!--UPDATE-->
		<update id="MdmResMaster.Update" parameterClass="MdmResMaster">
			UPDATE [CFG_RESOURCE_MASTER]
			   SET [RESOURCE_ID]       = #resourceID#
			     , [SITE_ID]           = #siteID#
			     , [LOCATION]          = #location#
			     , [CATEGORY]          = #category#
			     , [RESOURCE_TYPE]     = #resourceType#
			     , [RESOURCE_GROUP_ID] = #resourceGroupID#
			     , [STAGE_ID]          = #stageID#
			     , [CAPACITY_TYPE]     = #capacityType#
			     , [CAPACITY_MODE]     = #capacityMode#
			     , [IS_ACTIVE]         = #isActive#
			     , [UPDATE_TIME]       = getdate()
			     , [UPDATE_USER]       = #updateUser#
			 WHERE [RESOURCE_ID]       = #resourceID#
		</update>

		<!--DELETE-->
		<delete id="MdmResMaster.Delete" parameterClass="string">
			DELETE
			  FROM [CFG_RESOURCE_MASTER]
			 WHERE [RESOURCE_ID]       = #resourceID#
		</delete>

	</statements>
</sqlMap>