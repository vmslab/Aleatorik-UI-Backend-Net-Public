<?xml version="1.0" encoding="utf-8" ?>

<sqlMap namespace="AleatorikUI.Services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://ibatis.apache.org/mapping">

	<resultMaps>
		<resultMap id="group-result"  class="GroupInfo" >
			<result property="GroupId"    		column="GROUP_ID"/>
			<result property="SystemId"    	column="SYSTEM_ID"/>
			<result property="Name"	column="NAME"/>
			<result property="Description"	column="DESCRIPTION"/>
		</resultMap>
	</resultMaps>

	<statements>

    <!--SELECT All-->
    <select id="Group.SelectGroups" resultMap="group-result">
      SELECT
      GROUP_ID,
      SYSTEM_ID,
      NAME,
      DESCRIPTION
      FROM
      T_GROUP
    </select>

    <!--SELECT BY SYSTEM-->
    <select id="Group.SelectGroupsBySystem" parameterClass="string" resultMap="group-result">
      SELECT
      GROUP_ID,
      SYSTEM_ID,
      NAME,
      DESCRIPTION
      FROM
      T_GROUP
      WHERE
      SYSTEM_ID = #Id#
    </select>

    <!--SELECT BY ID-->
    <select id="Group.SelectGroup" parameterClass="string" resultMap="group-result">
      SELECT
      GROUP_ID,
      SYSTEM_ID,
      NAME,
      DESCRIPTION
      FROM
      T_GROUP
      WHERE
      GROUP_ID = #Id#
    </select>

    <!--INSERT-->
		<insert id="Group.InsertGroup" parameterClass="GroupInfo">
      INSERT INTO
      T_GROUP
      (GROUP_ID,
      SYSTEM_ID,
      NAME,
      DESCRIPTION)
      VALUES
      (#GroupId#,
      #SystemId#,
      #Name#,
      #Description#)
    </insert>

		<!--UPDATE-->
		<update id="Group.UpdateGroup" parameterClass="GroupInfo">
			UPDATE
				T_GROUP
			SET
			<dynamic prepend=" " close=" ">
        <isNotEmpty prepend="," property="Name">
          NAME = #Name#
        </isNotEmpty>
        <isNotEmpty prepend="," property="Description">
          DESCRIPTION = #Description#
        </isNotEmpty>
        WHERE
        GROUP_ID = #GroupId#
      </dynamic>
		</update>

		<!--DELETE-->
		<delete id="Group.DeleteGroup" parameterClass="string">
      DELETE
      FROM
      T_GROUP
      WHERE
      GROUP_ID = #Id#
    </delete>
	</statements>
</sqlMap>