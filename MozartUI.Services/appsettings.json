{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "DB": {
    "Resource": "./Maps/SqlMap.config",
    "Parameters": {
      // mysql
      // "connectionString": "Server=localhost;Database=myDB;Uid=root;Pwd=root;"

      // postgres
